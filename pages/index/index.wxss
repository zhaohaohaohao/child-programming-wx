/* 搜索 */
.search-bar {
  /* 横向布局 */
  height: 90rpx;
  display: flex;
  flex-direction: row;
  border: 2rpx solid #ddd;
  border-radius: 5rpx;
  align-items: center;
  justify-content: center；;
  position:fixed;
  top:90rpx;
  width: 100%;
  background-color: #fff;
}
.search-bar input {
  font: inherit;
  border-radius: 35rpx;
  padding: 10rpx 20rpx;
  background-color: #fafafa;
  border: 1rpx solid #eee;
  width: 60%;
}
.search-bar button {
  font: inherit;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  background-color: #3b8efa;
  border: 1rpx solid #eee;
  width: 20%;
  height: 75rpx;
}
.screening {
  width: 75rpx;
  height: 75rpx;
}
.myself {
  width: 75rpx;
  height: 75rpx;
  margin-right: 15rpx;
}

/* 筛选切换 */
.page-bottom {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color: red;
  z-index: 0;
  margin-left: 25%;
}
.page-content {
  padding-top: 300rpx;
}
.page-top {
  height: 100%;
  position: fixed;
  width: 750rpx;
  /* background-color: rgb(57, 125, 230); */
  background-color: #fff;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}
.c-state1 {
  transform: rotate(0deg) scale(1) translate(-75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(-75%, 0%);
}
.c-state2 {
  transform: rotate(0deg) scale(0.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(0.8) translate(75%, 0%);
}

